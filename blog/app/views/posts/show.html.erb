<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">

      <%= image_tag @post.img %>
      <h1><%= @post.title %></h1>
      <p><%= @post.content %></p>
    </div>
  </div>
  <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
  <%= link_to 'Back', root_path %>
</div>
