<!-- <h1>Blog Posts</h1> -->
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-md-4">
      <%= image_tag post.img %>
      <h1><%= post.title %></h1>
      <p><%= post.content %></p>
      <br>
      <%= link_to 'Read More', post_path(post) %>
    </div>
    <% end %>
  </div>
</div>
